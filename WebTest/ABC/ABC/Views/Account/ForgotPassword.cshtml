@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card fade-in">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">
                        <i class='bx bx-lock-open text-primary'></i>
                        Quên mật khẩu
                    </h3>

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            @TempData["Message"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" id="forgotPasswordForm">
                        <div class="mb-4">
                            <div class="form-floating">
                                <input type="email" class="form-control" id="email" name="email" required 
                                       placeholder="Nhập email">
                                <label for="email">Email đăng ký</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 hover-scale" id="submitBtn">
                            <span class="spinner-border spinner-border-sm d-none me-2" role="status"></span>
                            <i class='bx bx-mail-send me-2'></i>
                            Gửi link đặt lại mật khẩu
                        </button>

                        <div class="text-center mt-3">
                            <a href="/Account/Login" class="btn btn-link">
                                <i class='bx bx-arrow-back'></i> 
                                Quay lại đăng nhập
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#forgotPasswordForm').on('submit', function() {
                const btn = $('#submitBtn');
                const spinner = btn.find('.spinner-border');
                
                btn.prop('disabled', true);
                spinner.removeClass('d-none');

                setTimeout(() => {
                    btn.prop('disabled', false);
                    spinner.addClass('d-none');
                }, 2000);
            });
        });
    </script>
}
