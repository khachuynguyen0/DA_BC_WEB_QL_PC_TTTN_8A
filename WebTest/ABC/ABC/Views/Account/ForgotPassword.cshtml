@{
    ViewData["Title"] = "Quên Mật Khẩu";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quên Mật Khẩu | Quản Lý Thực Tập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #e0e6ed 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .forgot-password-form {
            background: white;
            padding: 2.5rem;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 420px;
        }
        
        .brand {
            text-align: center;
            margin-bottom: 2.5rem;
        }
        
        .brand h4 {
            color: #3f51b5;
            font-weight: 600;
            font-size: 1.7rem;
            margin-bottom: 0.5rem;
        }
        
        .form-label {
            color: #555;
            font-weight: 500;
        }
        
        .form-control {
            padding: 0.8rem 1rem;
            border-radius: 8px;
            border: 1px solid #ddd;
            transition: all 0.3s;
        }
        
        .form-control:focus {
            border-color: #3f51b5;
            box-shadow: 0 0 0 0.2rem rgba(63, 81, 181, 0.25);
        }
        
        .btn-primary {
            background-color: #3f51b5;
            border: none;
            padding: 0.8rem;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s;
        }
        
        .btn-primary:hover {
            background-color: #303f9f;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        .text-decoration-none {
            color: #3f51b5;
            transition: all 0.3s;
        }
        
        .text-decoration-none:hover {
            color: #303f9f;
        }
        
        .input-with-icon {
            position: relative;
        }
        
        .input-icon {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            left: 15px;
            color: #6c757d;
        }
        
        .input-with-icon .form-control {
            padding-left: 40px;
        }
        
        .footer {
            position: absolute;
            bottom: 20px;
            text-align: center;
            color: #6c757d;
            font-size: 0.85rem;
            width: 100%;
        }
        
        .alert {
            border-radius: 8px;
            padding: 0.8rem 1rem;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <div class="forgot-password-form">
        <div class="brand">
            <h4>Quên Mật Khẩu</h4>
            <p class="text-muted">Nhập email của bạn để đặt lại mật khẩu</p>
        </div>
        
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">
                @TempData["Message"]
            </div>
        }
        
        <form method="post" asp-action="ForgotPassword" asp-controller="Account">
            <div class="mb-4">
                <label class="form-label">Email đăng ký</label>
                <div class="input-with-icon">
                    <span class="input-icon"><i class="fas fa-envelope"></i></span>
                    <input type="email" name="email" class="form-control" required>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary w-100">Gửi Link Đặt Lại Mật Khẩu</button>
            
            <div class="text-center mt-4">
                <a href="/Account/Login" class="text-decoration-none">Quay lại đăng nhập</a>
            </div>
        </form>
    </div>

    <div class="footer">
        &copy; 2025 Hệ Thống Quản Lý Thực Tập
    </div>
</body>
</html>