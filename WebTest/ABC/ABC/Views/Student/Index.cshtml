@{
    ViewData["Title"] = "Sinh Viên";
}

<div class="app-container">
    <div class="content-wrapper">
        <div class="row p-4">
            <div class="@(ViewBag.ShowForm == true ? "col-md-8" : "col-md-12")" id="listSection">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Danh sách sinh viên thực tập</h5>
                        <button class="btn btn-primary hover-scale" onclick="toggleForm()">
                            <i class='bx bx-plus'></i> Thêm sinh viên
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class='bx bx-search'></i>
                                    </span>
                                    <input type="text" class="form-control border-start-0 ps-0" placeholder="Tìm kiếm sinh viên...">
                                </div>
                            </div>
                            <div class="col-md-8 text-end">
                                <div class="btn-group">
                                    <button class="btn btn-outline-secondary">
                                        <i class='bx bx-export'></i> Xuất Excel
                                    </button>
                                    <button class="btn btn-outline-secondary">
                                        <i class='bx bxs-file-pdf'></i> Xuất PDF
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã SV</th>
                                        <th>Họ tên</th>
                                        <th>Lớp</th>
                                        <th>Khoa</th>
                                        <th>GVHD</th>
                                        <th>Doanh nghiệp</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>SV001</td>
                                        <td>Nguyễn Văn A</td>
                                        <td>CNTT1</td>
                                        <td>Công nghệ thông tin</td>
                                        <td>Trần Văn B</td>
                                        <td>Công ty ABC</td>
                                        <td>
                                            <button class="btn btn-sm btn-warning hover-scale" title="Chỉnh sửa" onclick="editStudent('SV001')">
                                                <i class='bx bx-edit'></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger hover-scale" title="Xóa" onclick="confirmDelete('SV001')">
                                                <i class='bx bx-trash'></i>
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <nav aria-label="Page navigation" class="mt-4">
                            <ul class="pagination justify-content-end">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#"><i class='bx bx-chevron-left'></i></a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#"><i class='bx bx-chevron-right'></i></a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>

            <div class="col-md-4" id="formSection" style="display: none;">
                <div class="card modern-form">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class='bx bx-user-plus me-2'></i>Thêm sinh viên
                        </h5>
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="toggleForm()">
                            <i class='bx bx-x'></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Student" asp-action="Create" method="post">
                            <div class="row g-4">
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="studentId" name="StudentId" required>
                                        <label for="studentId">Mã Sinh Viên</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="fullName" name="FullName" required>
                                        <label for="fullName">Họ Và Tên</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="classId" name="ClassId" required>
                                        <label for="classId">Lớp</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="sdt" name="Sdt" required>
                                        <label for="sdt">SĐT</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="email" name="Email" required>
                                        <label for="email">Email</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="teacherName" name="TeacherName" required>
                                        <label for="teacherName">Tên Giảng Viên</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <select class="form-select" id="major" name="Major" required>
                                            <option value="">-- Khoa --</option>
                                            <option>Công nghệ thông tin</option>
                                            <option>Thiết Kế Thời Trang</option>
                                            <option>Marketing</option>
                                            <option>Truyền Thông</option>
                                            <option>Quản Trị Kinh Doanh</option>
                                        </select>
                                        <label for="major">Khoa</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <select class="form-select" id="project" name="Project" required>
                                            <option value="">-- Đề Tài --</option>
                                        </select>
                                        <label for="project">Đề Tài</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <select class="form-select" id="supervisor" name="Supervisor" required>
                                            <option value="">-- Người Phụ Trách --</option>
                                        </select>
                                        <label for="supervisor">Người Phụ Trách</label>
                                    </div>
                                </div>
                            </div>
                            <div class="text-end mt-4">
                                <button type="button" class="btn btn-outline-secondary me-2" onclick="toggleForm()">
                                    <i class='bx bx-x'></i> Hủy
                                </button>
                                <button type="submit" class="btn btn-primary hover-scale">
                                    <i class='bx bx-save'></i> Lưu thông tin
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-4" id="editFormSection" style="display: none;">
                <div class="card modern-form">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class='bx bx-edit-alt me-2'></i>Thông tin sinh viên
                        </h5>
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="toggleEditForm()">
                            <i class='bx bx-x'></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Student" asp-action="Edit" method="post">
                            <div class="row g-4">
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="editStudentId" name="StudentId" required>
                                        <label for="editStudentId">Mã Sinh Viên</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="editFullName" name="FullName" required>
                                        <label for="editFullName">Họ Và Tên</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="editClassId" name="ClassId" required>
                                        <label for="editClassId">Lớp</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="editSdt" name="Sdt" required>
                                        <label for="editSdt">SĐT</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="editEmail" name="Email" required>
                                        <label for="editEmail">Email</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="editTeacherName" name="TeacherName" required>
                                        <label for="editTeacherName">Tên Giảng Viên</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <select class="form-select" id="editMajor" name="Major" required>
                                            <option value="">-- Chọn Khoa --</option>
                                            <option>Công nghệ thông tin</option>
                                            <option>Thiết Kế Thời Trang</option>
                                            <option>Marketing</option>
                                            <option>Truyền Thông</option>
                                            <option>Quản Trị Kinh Doanh</option>
                                        </select>
                                        <label for="editMajor">Khoa</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <select class="form-select" id="editProject" name="Project" required>
                                            <option value="">-- Đề Tài --</option>
                                        </select>
                                        <label for="editProject">Đề Tài</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <select class="form-select" id="editSupervisor" name="Supervisor" required>
                                            <option value="">-- Người Phụ Trách --</option>
                                        </select>
                                        <label for="editSupervisor">Người Phụ Trách</label>
                                    </div>
                                </div>
                            </div>
                            <div class="text-end mt-4">
                                <button type="button" class="btn btn-outline-secondary me-2" onclick="toggleEditForm()">
                                    <i class='bx bx-x'></i> Hủy
                                </button>
                                <button type="submit" class="btn btn-primary hover-scale">
                                    <i class='bx bx-save'></i> Lưu thông tin
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Loại bỏ hoàn toàn hiệu ứng transition */
    #formSection, #editFormSection {
        /* Không cần opacity hay transition nữa */
    }
</style>

@section Scripts {
    <script>
        function editStudent(studentId) {
            // Fetch student data and populate the form for editing
            const studentData = {
                id: studentId,
                fullName: "Nguyễn Văn A",
                classId: "CNTT1",
                major: "Công nghệ thông tin",
                teacherName: "Trần Văn B",
                company: "Công ty ABC",
                phone: "0123456789",
                email: "nguyenvana@example.com"
            };

            document.getElementById('editStudentId').value = studentData.id;
            document.getElementById('editFullName').value = studentData.fullName;
            document.getElementById('editClassId').value = studentData.classId;
            document.getElementById('editSdt').value = studentData.phone;
            document.getElementById('editEmail').value = studentData.email;
            document.getElementById('editTeacherName').value = studentData.teacherName;
            document.getElementById('editMajor').value = studentData.major;
            // Populate other fields as necessary (e.g., Project, Supervisor if needed)

            toggleEditForm(); // Show the form with the populated data
        }

        function confirmDelete(studentId) {
            if (confirm('Bạn có chắc muốn xóa sinh viên này không?')) {
                // Proceed with deletion
                alert('Deleted student with ID: ' + studentId);
            }
        }

        function toggleEditForm() {
            const editFormSection = document.getElementById('editFormSection');
            const listSection = document.getElementById('listSection');
            const formSection = document.getElementById('formSection');

            if (editFormSection.style.display === 'none') {
                listSection.className = 'col-md-8';
                editFormSection.style.display = 'block';
                formSection.style.display = 'none'; // Ẩn form thêm nếu đang mở
            } else {
                listSection.className = 'col-md-12';
                editFormSection.style.display = 'none';
            }
        }

        function toggleForm() {
            const listSection = document.getElementById('listSection');
            const formSection = document.getElementById('formSection');
            const editFormSection = document.getElementById('editFormSection');

            if (formSection.style.display === 'none') {
                listSection.className = 'col-md-8';
                formSection.style.display = 'block';
                editFormSection.style.display = 'none'; // Ẩn form chỉnh sửa nếu đang mở
            } else {
                listSection.className = 'col-md-12';
                formSection.style.display = 'none';
            }
        }
    </script>
}