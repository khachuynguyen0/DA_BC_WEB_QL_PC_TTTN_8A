@{
    ViewData["Title"] = "Quản lý Giảng viên";
}

<div class="app-container">
    <div class="content-wrapper">
        <div class="row p-4">
            <div class="@(ViewBag.ShowForm == true ? "col-md-8" : "col-md-12")" id="listSection">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Danh sách giảng viên hướng dẫn</h5>
                        <button class="btn btn-primary hover-scale" onclick="toggleForm()">
                            <i class='bx bx-plus'></i> Thêm giảng viên
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class='bx bx-search'></i>
                                    </span>
                                    <input type="text" class="form-control border-start-0 ps-0" placeholder="Tìm kiếm giảng viên...">
                                </div>
                            </div>
                            <div class="col-md-8 text-end">
                                <div class="btn-group">
                                    <button class="btn btn-outline-secondary">
                                        <i class='bx bx-export'></i> Xuất Excel
                                    </button>
                                    <button class="btn btn-outline-secondary">
                                        <i class='bx bxs-file-pdf'></i> Xuất PDF
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã GV</th>
                                        <th>Họ tên</th>
                                        <th>Bộ môn</th>
                                        <th>Email</th>
                                        <th>Số điện thoại</th>
                                        <th>Số SV hướng dẫn</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>GV001</td>
                                        <td>TS. Nguyễn Văn A</td>
                                        <td>Công nghệ phần mềm</td>
                                        <td>nguyenvana@example.com</td>
                                        <td>0123456789</td>
                                        <td><span class="badge bg-primary">15</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-info hover-scale" title="Xem chi tiết">
                                                <i class='bx bx-detail'></i>
                                            </button>
                                            <button class="btn btn-sm btn-warning hover-scale" title="Chỉnh sửa">
                                                <i class='bx bx-edit'></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger hover-scale" title="Xóa">
                                                <i class='bx bx-trash'></i>
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <nav aria-label="Page navigation" class="mt-4">
                            <ul class="pagination justify-content-end">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#"><i class='bx bx-chevron-left'></i></a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#"><i class='bx bx-chevron-right'></i></a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>

            <div class="col-md-4" id="formSection" style="display: none;">
                <div class="card modern-form">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class='bx bx-user-plus me-2'></i>Thêm giảng viên mới
                        </h5>
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="toggleForm()">
                            <i class='bx bx-x'></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Teacher" asp-action="Create" method="post">
                            <div class="row g-4">
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="teacherId" name="TeacherId" required>
                                        <label for="teacherId">Mã giảng viên</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="fullName" name="FullName" required>
                                        <label for="fullName">Họ và tên</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <select class="form-select" id="academicTitle" name="AcademicTitle" required>
                                            <option value="">Chọn học hàm/học vị</option>
                                            <option>Thạc sĩ</option>
                                            <option>Tiến sĩ</option>
                                            <option>Phó Giáo sư</option>
                                            <option>Giáo sư</option>
                                        </select>
                                        <label for="academicTitle">Học hàm/Học vị</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <select class="form-select" id="department" name="Department" required>
                                            <option value="">Chọn bộ môn</option>
                                            <option>Công nghệ phần mềm</option>
                                            <option>Hệ thống thông tin</option>
                                        </select>
                                        <label for="department">Bộ môn</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="email" class="form-control" id="email" name="Email" required>
                                        <label for="email">Email</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="tel" class="form-control" id="phone" name="Phone" required>
                                        <label for="phone">Số điện thoại</label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="text-end mt-4">
                                <button type="button" class="btn btn-outline-secondary me-2" onclick="toggleForm()">
                                    <i class='bx bx-x'></i> Hủy
                                </button>
                                <button type="submit" class="btn btn-primary hover-scale">
                                    <i class='bx bx-save'></i> Lưu thông tin
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleForm() {
            const listSection = document.getElementById('listSection');
            const formSection = document.getElementById('formSection');
            
            if (formSection.style.display === 'none') {
                listSection.className = 'col-md-8';
                formSection.style.display = 'block';
                formSection.classList.remove('hide');
                formSection.classList.add('show', 'slide-in');
            } else {
                listSection.className = 'col-md-12';
                formSection.classList.remove('show');
                formSection.classList.add('hide');
                setTimeout(() => {
                    formSection.style.display = 'none';
                }, 300);
            }
        }
    </script>
}
