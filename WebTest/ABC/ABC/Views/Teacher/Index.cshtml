@{
    ViewData["Title"] = "Giảng Viên";
}

<div class="app-container">
    <div class="content-wrapper">
        <div class="row p-4">
            <div class="@(ViewBag.ShowForm == true ? "col-md-8" : "col-md-12")" id="listSection">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Danh sách giảng viên hướng dẫn</h5>
                        <button class="btn btn-primary hover-scale" onclick="toggleForm()">
                            <i class='bx bx-plus'></i> Thêm giảng viên
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class='bx bx-search'></i>
                                    </span>
                                    <input type="text" class="form-control border-start-0 ps-0" placeholder="Tìm kiếm giảng viên...">
                                </div>
                            </div>
                            <div class="col-md-8 text-end">
                                <div class="btn-group">
                                    <button class="btn btn-outline-secondary">
                                        <i class='bx bx-export'></i> Xuất Excel
                                    </button>
                                    <button class="btn btn-outline-secondary">
                                        <i class='bx bxs-file-pdf'></i> Xuất PDF
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã GV</th>
                                        <th>Họ tên</th>
                                        <th>Bộ môn</th>
                                        <th>Email</th>
                                        <th>Số điện thoại</th>
                                        <th>Số SV hướng dẫn</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>GV001</td>
                                        <td>TS. Nguyễn Văn A</td>
                                        <td>Công nghệ phần mềm</td>
                                        <td>nguyenvana@example.com</td>
                                        <td>0123456789</td>
                                        <td><span class="badge bg-primary">15</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-warning hover-scale" title="Chỉnh sửa" onclick="editTeacher('GV001')">
                                                <i class='bx bx-edit'></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger hover-scale" title="Xóa" onclick="confirmDelete('GV001')">
                                                <i class='bx bx-trash'></i>
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <nav aria-label="Page navigation" class="mt-4">
                            <ul class="pagination justify-content-end">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#"><i class='bx bx-chevron-left'></i></a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#"><i class='bx bx-chevron-right'></i></a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>

            <div class="col-md-4" id="formSection" style="display: none;">
                <div class="card modern-form">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class='bx bx-user-plus me-2'></i>Thêm giảng viên
                        </h5>
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="toggleForm()">
                            <i class='bx bx-x'></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Teacher" asp-action="Create" method="post">
                            <div class="row g-4">
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="teacherId" name="TeacherId" required>
                                        <label for="teacherId">Mã Giảng Viên</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="fullName" name="FullName" required>
                                        <label for="fullName">Họ Và Tên</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="subject" name="Subject" required>
                                        <label for="subject">Bộ Môn</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="phone" name="Phone" required>
                                        <label for="phone">SĐT</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="email" name="Email" required>
                                        <label for="email">Email</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <select class="form-select" id="faculty" name="Faculty" required>
                                            <option value="">-- Khoa --</option>
                                            <option>Công nghệ thông tin</option>
                                            <option>Thiết Kế Thời Trang</option>
                                            <option>Marketing</option>
                                            <option>Truyền Thông</option>
                                            <option>Quản Trị Kinh Doanh</option>
                                        </select>
                                        <label for="department">Khoa</label>
                                    </div>
                                </div>
                            </div>
                            <div class="text-end mt-4">
                                <button type="button" class="btn btn-outline-secondary me-2" onclick="toggleForm()">
                                    <i class='bx bx-x'></i> Hủy
                                </button>
                                <button type="submit" class="btn btn-primary hover-scale">
                                    <i class='bx bx-save'></i> Lưu thông tin
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-4" id="editFormSection" style="display: none;">
                <div class="card modern-form">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class='bx bx-edit-alt me-2'></i>Thông tin giảng viên
                        </h5>
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="toggleEditForm()">
                            <i class='bx bx-x'></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Teacher" asp-action="Edit" method="post">
                            <div class="row g-4">
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="editTeacherId" name="TeacherId" required>
                                        <label for="editTeacherId">Mã Giảng Viên</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="editFullName" name="FullName" required>
                                        <label for="editFullName">Họ Và Tên</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="editSubject" name="Subject" required>
                                        <label for="editSubject">Bộ Môn</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="editPhone" name="Phone" required>
                                        <label for="editPhone">SĐT</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="editEmail" name="Email" required>
                                        <label for="editEmail">Email</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <select class="form-select" id="editFaculty" name="Faculty" required>
                                            <option value="">-- Khoa --</option>
                                            <option>Công nghệ thông tin</option>
                                            <option>Thiết Kế Thời Trang</option>
                                            <option>Marketing</option>
                                            <option>Truyền Thông</option>
                                            <option>Quản Trị Kinh Doanh</option>
                                        </select>
                                        <label for="editFaculty">Khoa</label>
                                    </div>
                                </div>
                            </div>
                            <div class="text-end mt-4">
                                <button type="button" class="btn btn-outline-secondary me-2" onclick="toggleEditForm()">
                                    <i class='bx bx-x'></i> Hủy
                                </button>
                                <button type="submit" class="btn btn-primary hover-scale">
                                    <i class='bx bx-save'></i> Lưu thông tin
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleEditForm() {
            const editFormSection = document.getElementById('editFormSection');
            const listSection = document.getElementById('listSection');
            
            if (editFormSection.style.display === 'none') {
                listSection.className = 'col-md-8';
                editFormSection.style.display = 'block';
                setTimeout(() => {
                    editFormSection.classList.add('show');
                }, 50);
            } else {
                listSection.className = 'col-md-12';
                editFormSection.classList.remove('show');
                editFormSection.style.display = 'none';
            }
        }

        function editTeacher(teacherId) {
            // Fetch teacher data and populate the form for editing
            const teacherData = {
                id: teacherId,
                fullName: "TS. Nguyễn Văn A",
                subject: "Công nghệ phần mềm",
                phone: "0123456789",
                email: "nguyenvana@example.com"
            };

            document.getElementById('editTeacherId').value = teacherData.id;
            document.getElementById('editFullName').value = teacherData.fullName;
            document.getElementById('editSubject').value = teacherData.subject;
            document.getElementById('editPhone').value = teacherData.phone;
            document.getElementById('editEmail').value = teacherData.email;

            toggleEditForm(); // Show the form with the populated data
        }

        function confirmDelete(teacherId) {
            if (confirm('Bạn có chắc muốn xóa giảng viên này không?')) {
                // Proceed with deletion
                alert('Deleted teacher with ID: ' + teacherId);
            }
        }
    </script>
}
